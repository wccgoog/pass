/* pages/listDetail/listDetail.wxss */
.themeWrap{
  position: relative;
}
.themeTitle{
  color: #666;
  font-size: 32rpx;
  padding:20rpx 0 20rpx 20rpx;
  border-bottom:1px solid #eee;
  display: flex;
  position: fixed;
  top:0;
  left:0;
  width:100%;
  background-color: #fff;
  font-family: simsun;
}
.themeTitleWords{
  flex:5;
  padding-left:20rpx;
  border-left:4px solid #079a41;
}
.variousList{
  margin-top:100rpx;
}
.listSingle{
  background-color: #fff;
  padding:20rpx;
  font-size: 32rpx;
  color:#333;
  margin-bottom:20rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.temporaryNo{
  position: absolute;
  left:50%;
  transform: translateX(-50%);
  top:20%;
}
.temporaryNoWrap{
  text-align: center;
}
.temporaryNoImg{
  width:150rpx;
}
.temporaryNoWords{
  margin-top:20rpx;
  color:#bfbfbf;
  font-size: 42rpx;
}
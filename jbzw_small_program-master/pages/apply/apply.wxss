  color: #666;
}

.recommend-service-container2 .title2 .right-title2 {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 28rpx;
  color: #999;
}

.service-icon2 {
  padding: 20px 20px 20px 0;

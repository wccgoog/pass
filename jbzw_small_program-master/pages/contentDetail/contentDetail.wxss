/* pages/contentDetail/contentDetail.wxss */
.headWrap{
  width:100%; 
  position: fixed;
  top:0;
  left:0;
  z-index: 9;
}
.bodyWrap{
  margin-top:90rpx;
  height:1100rpx;
}
.head{
  display: flex;
  white-space: nowrap;
  align-items: center;
  width:100%;
  height:90rpx;
  line-height: 85rpx;
  background-color: #fff;
}
.headSingle{
  text-align: center;
  display: inline-block;
  padding: 0 20rpx;
}
.textStyle{
  display: inline-block;
}
.on{ 
  color: #079a3f;  
  border-bottom: 5rpx solid #079a3f;
}
.basicInfo,.flowChart,.material,.depend,.condition{
  border-radius: 20px;
  margin:20rpx;
  background-color: #fff;
}
.bodyHeader{
  padding:35rpx 30rpx;
  border-bottom:1px solid #eee;
  display: flex;
  align-items: center;
}
.headerImg{
  width:40rpx;
  margin-right: 20rpx;
}
.headerText{
  color:#079a3f;
}
.bodyList{
  height:115rpx;
  overflow: hidden;
  padding:20rpx 30rpx;
  font-size: 32rpx;
}
.bodyListSingle{
  line-height: 60rpx;
  display: flex;
  white-space: nowrap;
  position: relative;
}
.bodyListSingleKey{
  color:#666;
}
.bodyListSingleValue{
  white-space:normal;
}
/* 底部按钮 */
.bottomButton{
  padding:10rpx 0 20rpx 0;
}
.bottomButton button{
  width:200rpx;
  border:1px solid #079a3f;
  border-radius: 55rpx;
  background-color: #fff;
  color:#079a3f;
  font-size: 30rpx;
  height:70rpx;
  line-height: 70rpx;
}
/* 流程图 */
.flowTree{
  margin-top:50rpx;
  text-align: center;
}
.flowTree view{
  margin:20rpx 0;
  color:#666;
  font-size: 35rpx;
}
.flowTreeImg{
  width:500rpx;
}
/* 办理材料 */
.materialList{
  color:#666;
  padding:5rpx 0;
}
/* 设定依据 */
.dependWords{
  color:#666;
}
/* 办理条件 */
.conditionWords{
  color:#666;
}
/* 控制展开折叠 */
.flod{
  height:110rpx;
}
.extend{
  height:auto;
}
/* 新增下载按钮 */
.download{
  height:55rpx;
  /* line-height: 50rpx; */
  border:1px solid skyblue; 
  color:skyblue;
  width:90rpx;
  border-radius:10rpx; 
  font-size: 30rpx;
  text-align: center;
  position: absolute;
  right:0;
  top:50%;
  transform: translateY(-50%);
  /* 文字竖直显示 */
   /* writing-mode:tb-rl; */
  padding: 20rpx 0;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
}
.downloadRight{
  margin-right:80rpx;
}
.bodyListSingleValueWrap{
  width:100%;
  position: relative;
}
.wrapWrap{
    width:100%;
  display: flex;
  flex-wrap: wrap;
}
/* 表格 */
.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 300%;
  justify-content: center;
  height: auto;
  align-items: center;
}
.td {
    width:60%;
    justify-content: center;
    text-align: center;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #E6F3F9;
}
.th {
  width: 60%;
  justify-content: center;
  background: #6699CC;
  color: #fff;
  display: flex;
  height: 100rpx;
  align-items: center;
}

.width1{
  width:60% !important;
}
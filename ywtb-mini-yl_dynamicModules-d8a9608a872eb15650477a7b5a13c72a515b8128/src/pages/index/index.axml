<import src="/templates/recommend-service/index.axml"/>
<view class="page-container">
  <view class="top">
    <header />
    <!-- <user /> -->
    <!-- <template is="tp-information" data="{{noticeInfo}}" /> -->
    <!-- <information /> -->
  </view>
  <swiper class="head" indicator-dots=true autoplay=true interval="5000">
    <block a:for="{{background}}">
      <swiper-item >
        <image class="simage" src={{item}} mode="aspectFill"/>
      </swiper-item>
    </block>
  </swiper>
  <!-- <view class="recommend-service-container2" onTap="onLoginSetUserInfo"><view a:for="{{itemList}}" a:key="{{index}}" a:if="{{dataId==item.bOrC}}" class="service-list2"><view class='service-title2'>{{item.title}}</view><view a:for="{{item.items}}" a:key="{{index}}" bindtap='toWebView' class="service-item2" data-id="{{item.dataId}}"><image class="service-icon2" mode="aspectFit" src="{{item.src}}" /><view><view class="service-name2">{{item.name}}</view><view class="service-detail2">{{item.detail}}</view></view><image class="service-arrow2" mode="aspectFit" src="https://jbxqalipay.nanjingdata.cn/m/image/arrow.png" /></view></view></view> -->
